<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container p-3 mb-2 bg-dark text-white">

      <% include ../static/partials/messages.ejs %>

      <h1>Sign in</h1>

      <form action="/users/sign_in" method="post">

        <div class="form-group">
          <label for="username">Username</label>
          <input type="username" class="form-control" name="username" aria-describedby="username" placeholder="Enter username">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
