<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body class="bg-light">
    <% include ../static/partials/navbar.ejs %>

    <main class="container p-3 mb-2 bg-white text-dark border border-dark">

      <h1>New Wiki</h1>

      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki Title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
        </div>
        <div>
        <% if (currentUser.role == 1 || currentUser.role == 2) { %>
            <label for="private">View:</label>
              <select name="private"  id="private">
                <option value=true>Private</option>
                <option value=false>Public</option>
              </select>
        <%  } %>
        <br>
        <br>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
